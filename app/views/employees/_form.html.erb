<%= form_for employee do |f| %>
  <%= f.label :username, 'Username (required)' %></br>
  <%= f.text_field :username %></br>

  <%= f.label :password, 'Password (required)' %></br>
  <%= f.password_field :password %></br>

  <%= f.label :name, 'Your Real Name (required)' %></br>
  <%= f.text_field :name %></br>

  <%= f.label :email, 'Email (required)' %></br>
  <%= f.text_field :email %></br>

  <%= f.label :title, 'Job Title' %></br>
  <%= f.text_field :title %></br>

  <%= f.label :bio, 'Bio' %></br>
  <%= f.text_area :bio %></br>

  <%= f.label :location, 'Location (required)' %></br>
  <%= f.collection_select :location_id, Location.all, :id, :name, :prompt => 'Where do you work?'%></br>

  <%= f.label :manager, 'Manager (required)' %></br>
  <%= f.collection_select :manager_id, manager_arr, :id, :name, :include_blank => "I'm a manager", :prompt => "Who's your boss?"%></br>

  <%= f.submit %>
<% end %>
